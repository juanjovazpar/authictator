{
  "name": "authictator",
  "version": "0.1.0",
  "description": "A minimalist, high-performance authentication and user management service built with Fastify, TypeScript, and MongoDB.",
  "main": "index.js",
  "scripts": {
    "serve": "nodemon --watch src --exec ts-node src/index.ts",
    "start": "npm run migrate && npm serve",
    "migrate": "npx migrate-mongo up",
    "migrate:down": "npx migrate-mongo down"
  },
  "author": "juanjovazpar@github",
  "dependencies": {
    "crypto": "^1.0.1",
    "geoip-lite": "^1.4.10",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "tslib": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@fastify/autoload": "~5.7.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.1.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/geoip-lite": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.1",
    "bcryptjs": "^2.4.3",
    "fastify": "^5.6.1",
    "fastify-plugin": "~4.5.0",
    "migrate-mongo": "^12.1.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
